default_platform(:ios)

platform :ios do
  desc "Build the app for simulator"
  lane :build do
    gym(
      scheme: "TruckRouteCalculator",
      configuration: "Debug",
      destination: "generic/platform=iOS Simulator",
      clean: true,
      skip_package_ipa: true,
      skip_archive: true
    )
  end

  desc "Run unit tests"
  lane :test do
    scan(
      scheme: "TruckRouteCalculator",
      devices: ["iPhone 15 Pro"],
      configuration: "Debug",
      clean: true,
      code_coverage: true
    )
  end

  desc "Build and test"
  lane :build_and_test do
    build
    test
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do |options|
    increment_build_number(
      xcodeproj: "TruckRouteCalculator.xcodeproj"
    )
    build_app(
      scheme: "TruckRouteCalculator",
      export_method: "app-store",
      clean: true
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: options[:wait] != true,
      changelog: options[:changelog] || "Bug fixes and improvements",
      beta_app_feedback_email: "helpnow@pivotallift.com",
      notify_external_testers: options[:notify] == true
    )
  end

  desc "Upload metadata to App Store Connect (no binary)"
  lane :metadata do
    deliver(
      skip_binary_upload: true,
      skip_screenshots: true,
      force: true
    )
  end

  desc "Upload screenshots to App Store Connect"
  lane :screenshots do
    deliver(
      skip_binary_upload: true,
      skip_metadata: true,
      force: true
    )
  end

  desc "Push a new release to the App Store"
  lane :release do |options|
    increment_build_number(
      xcodeproj: "TruckRouteCalculator.xcodeproj"
    )
    build_app(
      scheme: "TruckRouteCalculator",
      export_method: "app-store",
      clean: true
    )
    upload_to_app_store(
      force: true,
      skip_metadata: false,
      skip_screenshots: options[:skip_screenshots] != false,
      submit_for_review: options[:submit] == true,
      automatic_release: options[:auto_release] == true,
      submission_information: {
        add_id_info_uses_idfa: false,
        export_compliance_uses_encryption: false,
        export_compliance_encryption_updated: false
      }
    )
  end

  desc "Submit existing build for App Store review"
  lane :submit do
    deliver(
      skip_binary_upload: true,
      skip_metadata: true,
      skip_screenshots: true,
      submit_for_review: true,
      automatic_release: false,
      force: true,
      submission_information: {
        add_id_info_uses_idfa: false,
        export_compliance_uses_encryption: false,
        export_compliance_encryption_updated: false
      }
    )
  end

  desc "Add external tester to TestFlight"
  lane :add_tester do |options|
    pilot(
      email: options[:email],
      groups: [options[:group] || "Beta Testers"]
    )
  end

  desc "List TestFlight testers"
  lane :testers do
    pilot(list: true)
  end

  desc "Lint Swift code"
  lane :lint do
    swiftlint(
      mode: :lint,
      executable: "swiftlint",
      reporter: "emoji"
    )
  end

  desc "Fix SwiftLint warnings"
  lane :lint_fix do
    swiftlint(
      mode: :autocorrect,
      executable: "swiftlint"
    )
  end
end
